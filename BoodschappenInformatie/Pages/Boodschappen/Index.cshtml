@page
@model BoodschappenInformatie.Pages.Boodschappen.IndexModel

@{
	ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
	<a asp-page="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Boodschap[0].BoodschapName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Boodschap[0].Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Boodschap[0].Package)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Boodschap[0].Prijs)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Boodschap)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.BoodschapName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Package)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Prijs)
				</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
					<a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
