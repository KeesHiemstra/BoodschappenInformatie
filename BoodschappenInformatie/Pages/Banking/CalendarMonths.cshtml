@page "{GroupName,CurrentPage:int?}"
@model BoodschappenInformatie.Pages.Banking.CalendarMonthsModel
@using BoodschappenInformatie.Helpers
@{
	ViewData["Title"] = "CalendarMonths";
}

<h2>Bank calendar per months</h2>

<groups groups="@Model.Patterns" current-group="@Model.GroupName" remaining-group="Rest"></groups>
<pager total-pages="@Model.TotalPages" current-page="@Model.CurrentPage"></pager>

<table class="table">
	<thead>
		<tr>
			<th></th>
			@foreach (var month in Model.Months)
			{
				<th>@month</th>
			}
		</tr>
	</thead>
	<tbody>
		@foreach (var tally in Model.Tallies)
		{
			<tr>
				<td>@tally.ShortTallyDescription()</td>
				@foreach (var month in Model.Months)
				{
					<td>
						<a href="~/Banking/Index?searchTally=@tally&searchMonth=@month">
							<div style="height:100%;width:100%">
								@Model.GetCalendarCell(tally, month)
							</div>
						</a>
					</td>
				}
			</tr>
		}
	</tbody>
</table>

@section Styles {
	<style>
		.groupName {
			margin: 0px 4px;
		}
	</style>
}
