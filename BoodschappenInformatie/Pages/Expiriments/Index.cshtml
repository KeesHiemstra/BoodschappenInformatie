@page
@model BoodschappenInformatie.Pages.Expiriments.IndexModel
@using BoodschappenInformatie.Helpers

@{
	ViewData["Title"] = "Index";
}

<h2>Index expiriment</h2>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Bank[0].Account)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Bank[0].Month)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Bank[0].Amount)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Bank[0].Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Bank[0].Mutation)
			</th>
			<th>
				Tally
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Bank)
		{
			<tr>
				<td>
					@item.Account.ShortAccountNumber()
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Month)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Amount)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Mutation)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TallyDescription)
				</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-page="./Details" asp-route-id="@item.Id">Details</a>
				</td>
			</tr>
		}
	</tbody>
</table>

