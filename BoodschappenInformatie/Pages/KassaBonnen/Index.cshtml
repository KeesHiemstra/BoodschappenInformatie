@page
@model BoodschappenInformatie.Pages.KassaBonnen.IndexModel

@{
	ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
	<a asp-page="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.KassaBon[0].Winkel)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.KassaBon[0].BonDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.KassaBon[0].SubTotaal)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.KassaBon[0].TotaalKorting)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.KassaBon[0].TotaalPrijs)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.KassaBon[0].Description)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.KassaBon)
		{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Winkel.WinkelName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.BonDate)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.SubTotaal)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.TotaalKorting)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.TotaalPrijs)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Description)
			</td>
			<td>
				<a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
				<a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
				<a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
			</td>
		</tr>
		}
	</tbody>
</table>
